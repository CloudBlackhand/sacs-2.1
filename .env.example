# Configuração do servidor Node.js
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Supabase (PostgreSQL)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# JWT Secret para autenticação
JWT_SECRET=your_secret_key_here_change_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Serviço Python
PYTHON_SERVICE_URL=http://127.0.0.1:8001

# Caminho da sessão WhatsApp (opcional)
# SESSION_PATH=/data/.wwebjs_auth

# Caminho do Chrome/Chromium (opcional - Puppeteer detecta automaticamente)
# CHROME_PATH=/usr/bin/chromium-browser

# Modo desenvolvimento (apenas para testes locais)
# DEV_FAKE_AUTH=1